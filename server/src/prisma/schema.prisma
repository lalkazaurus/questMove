generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model quest {
  id          Int          @id @default(autoincrement())
  name        String
  description String
  createdBy   String
  checkpoints checkpoint[]
}

model checkpoint {
  id      Int    @id @default(autoincrement())
  lat     Float
  lng     Float
  title   String
  task    String
  quation String
  answer  String
  questId Int
  quest   quest  @relation(fields: [questId], references: [id])
}
